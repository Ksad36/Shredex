extends  ../_skeleton

//- Includes
include ../components/_ui-contact-form

block variables
  - var activeCategory = 'contacts'
  - var pageName = 'Contacts'

block page 
  // Page Header
  include ../sections/_header-classic

  +breadcrumbs({
    category: activeCategory,
    subtitle: 'Get in Touch with Us',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })

  // Contact Form
  section.section.section-xxl.bg-default
    .container
      h1 Contact Form
      .row.justify-content-center
        .col-lg-10.col-xl-8
          +contact-form({ buttonText: 'Send Message' })
  ="\n"

  include ../sections/_section-contact-information

  // Page Footer
  include ../sections/_footer-classic