extends  ../_skeleton

//- Includes
include ../components/_ui-inline-subscribe-form

block variables
  - var pageName = 'Search Results'

block page 
  // Page Header
  include ../sections/_header-classic

  +breadcrumbs({
    subtitle: 'Choose Your Style',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })

  // Search results
  section.section-md
    .container
      .row.justify-content-center
        .col-lg-9
          // RD Search Form
          form.form-search.rd-search(action='search-results.html', method='GET')
            .form-wrap
              label.form-label(for="search-form") Enter a keyword...
              input#search-form.form-input.form-search-input(type='text', name='s', autocomplete='off')
              button(type="submit").button-search.mdi.mdi-magnify
              
          .rd-search-results
  ='\n'
  
  // Page Footer
  include ../sections/_footer-classic