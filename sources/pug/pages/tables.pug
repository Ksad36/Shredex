extends  ../_skeleton

//- Includes
block variables
  - var activeCategory = 'pages'
  - var pageName = 'Tables'

block page
  include ../sections/_header-classic

  +breadcrumbs({
    category: activeCategory,
    subtitle: 'Choose Your Style',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })

  section.section.section-xs.section-first.bg-default
    .container
      h3 Table Styles
      p.text-width-medium Tables have always been perfect for displaying facts  and numbers. Now you can benefit from using them on your website.
      .table-custom-responsive
        table.table-custom.table-custom-primary
          thead
            tr
              th Column 1
              th Column 2
              th Column 3
              th Column 4

          tbody
            tr
              td Item #1
              td Description
              td Subtotal
              td $1.00
            tr
              td Item #2
              td Description
              td Discount
              td $2.00
            tr
              td Item #3
              td Description
              td Shipping
              td $3.00

            tr
              td Item #4
              td Description
              td Tax
              td $4.00

          tfoot
            tr
              td All Items
              td Description
              td Your Total
              td $10.00
  ="\n"

  section.section.section-xs.bg-default
    .container
      .table-custom-responsive
        table.table-custom
          thead
            tr
              th Column 1
              th Column 2
              th Column 3
              th Column 4

          tbody
            tr
              td Item #1
              td Description
              td Subtotal
              td $1.00
            tr
              td Item #2
              td Description
              td Discount
              td $2.00
            tr
              td Item #3
              td Description
              td Shipping
              td $3.00

            tr
              td Item #4
              td Description
              td Tax
              td $4.00

          tfoot
            tr
              td All Items
              td Description
              td Your Total
              td $10.00
  ="\n"

  section.section.section-xs.section-last.bg-default
    .container
      .table-custom-responsive
        table.table-custom.table-custom-striped.table-custom-gray
          thead
            tr
              th Column 1
              th Column 2
              th Column 3
              th Column 4

          tbody
            tr
              td Item #1
              td Description
              td Subtotal
              td $1.00
            tr
              td Item #2
              td Description
              td Discount
              td $2.00
            tr
              td Item #3
              td Description
              td Shipping
              td $3.00

            tr
              td Item #4
              td Description
              td Tax
              td $4.00

          tfoot
            tr
              td All Items
              td Description
              td Your Total
              td $10.00
