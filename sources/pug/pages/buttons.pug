extends  ../_skeleton

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Buttons'

block page 
  // Page Header
  include ../sections/_header-classic

  +breadcrumbs({
    category: activeCategory,
    subtitle: 'Choose Your Style',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })

  // Button Sizes
  section.section.section-xs.section-first.bg-default
    .container
      h3 Button Sizes
      p 4 different sizes: large, default, medium, and small.
      .group-lg.group-middle
        .button.button-lg.button-primary.button-leaf Large
        .button.button-primary.button-leaf Default
        .button.button-md.button-primary.button-leaf Medium
        .button.button-sm.button-primary.button-leaf Small
  ="\n"

  // Button Shapes
  section.section.section-xs.bg-default
    .container
      h3 Button Shapes
      p 4 different shapes: default, round 1, round 2, and circle.
      .group-lg.group-middle
        .button.button-primary.button-leaf Default
        .button.button-primary.button-leaf.button-round-1 Round 1
        .button.button-primary.button-leaf.button-round-2 Round 2
        .button.button-primary.button-leaf.button-circle Circle
  ="\n"
 
  // Buttons with Icons
  section.section.section-xs.bg-default
    .container
      h3 Buttons with Icons
      p Buttons are fully integrated with 900+ icons.
      .group-lg.group-middle
        .button.button-icon.button-leaf.button-icon-right.button-primary
          span.icon.mdi.mdi-account
          | Right Icon
        .button.button-icon.button-leaf.button-icon-left.button-primary
          span.icon.mdi.mdi-arrow-left-bold
          | Left Icon
        .button.button-icon.button-icon-right.button-white-outline
          span.icon.mdi.mdi-account
          | Right Icon
        .button.button-icon.button-icon-left.button-white-outline
          span.icon.mdi.mdi-arrow-left-bold
          | Left Icon
  ="\n"

  // Buttons with Shadow
  section.section.section-xs.section-second.bg-default
    .container
      h3 Buttons with Shadow
      p Enhance your buttons with a shadow effect.
      .group-lg.group-middle
        .button.button-primary.button-shadow Shadow
        .button.button-white.button-shadow Shadow
  ="\n"

  // Page Footer
  include ../sections/_footer-classic