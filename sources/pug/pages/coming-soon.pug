extends  ../_skeleton

//- Includes
include ../components/_ui-inline-subscribe-form

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Coming soon'

block title
  title=pageName

block page
  section.section.section-single.novi-background.bg-overlay-50.novi-background.context-dark.snow-animate(style='background-image: url(images/bg-coming-soon.jpg);')
    .section-single-inner
      //-Page Header
      include ../sections/_section-header-base-transparent

      //- Page Main
      .section-single-main
        .container
          .row.justify-content-md-center
            .col-md-12.col-lg-9.col-xl-7
              h3 We're Getting Ready to Launch In
              // TimeCircles
              .DateCountdown(data-type='until' data-date='2018-12-31 00:00:00' data-format='wdhms' data-color='#fff' data-bg='rgba(245, 245, 245, 0)' data-width='0.02')
              p.text-width-medium Our website is coming soon and we are currently working very hard to give you the best experience on our new website.
              +inline-subscribe-form({customUnique: '1'})

      //-Page Footer
      include ../sections/_section-footer-base-transparent