extends  ../_skeleton

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Typography'

block page 
  // Page Header
  include ../sections/_header-classic
 
  +breadcrumbs({ 
    category: activeCategory,
    subtitle: 'Choose Your Style',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })

  // Base typography 
  section.section.section-sm.section-first.bg-default.text-left
    .container
      .row.row-40
        .col-xl-8
          ul.list-xl
            li
              h1 H1 Heading
              p.big Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.

            li
              h2 H2 Heading
              p.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.

            li
              h3 H3 Heading
              p.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.

            li
              h4 H4 Heading
              p.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.

            li
              h5 H5 Heading
              p.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.
            li
              h6 H6 Heading
              p.small.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.
  ="\n"

  // Blockquote
  section.section.section-sm.bg-default.text-left
    .container
      .row.row-40
        .col-lg-10.col-xl-8
          h1 Blockquote
          // Quote Classic
          article.quote-classic
            span.icon.mdi.mdi-format-quote.quote-classic-icon
            .quote-classic-text: p.q Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.
            p.quote-classic-cite Susan Williams
            p.quote-classic-status Regular Customer
  ="\n"

  // HTML Text Elements
  section.section.section-sm.bg-default.text-left
    .container
      .row.row-40
        .col-lg-10.col-xl-8
          h1 HTML Text Elements
          p.big.text-elements
            a(href='#') Link text
            br
            a.link-hover(href='#') Hover link text
            br
            span.font-weight-bold Bold Text
            br
            span.text-italic Italic text
            br
            mark This is a highlighted text
            br
            span.text-strike This is a strickethrough text
            br
            span.text-underline.text-primary This is an underlined text
  ="\n"

  // Unordered List
  section.section.section-sm.bg-default.text-spacing-20.text-left
    .container
      .row.row-40
        .col-xl-8
          h1 Unordered List
          p.big We specialize in a variety of services. Our aim is to deliver the top level of customer service based on your requests.
          ul.list-big.list-marked.list-gray-800
            li Consulting
            li Customer Service
            li Innovation
            li Management
            li Ethics
          p.big We hope that with our services you will receive the most personalized help in purchasing any kind of products you are looking for.
  ="\n"

  // Ordered List
  section.section.section-sm.bg-default.text-left
    .container
      .row.row-40
        .col-xl-8
          h1 Ordered List
          p.big We specialize in a variety of services. Our aim is to deliver the top level of customer service based on your requests.
          ol.list-big.list-ordered.list-gray-800
            li Consulting
            li Customer Service
            li Innovation
            li Management
            li Ethics
          p.big We hope that with our services you will receive the most personalized help in purchasing any kind of products you are looking for.
  ="\n"

  // Icon List
  section.section.section-sm.bg-default.text-left
    .container
      h1 Icon List
      .row.row-40
        .col-sm-6.col-lg-4.col-xl-3
          article.box-minimal
            .box-minimal-icon.fl-bigmug-line-megaphone11
            h4.box-minimal-title Best Service
            .box-minimal-text Our mission is to attract and retain customers by providing Best in Class solutions and fostering a profitable, disciplined culture of safety, service, and trust.

        .col-sm-6.col-lg-4.col-xl-3
          article.box-minimal
            .box-minimal-icon.fl-bigmug-line-note35
            h4.box-minimal-title Reputation
            .box-minimal-text We have established a strong presence in the industry. Our award-winning services earn a reputation for quality and excellence that few can rival.

        .col-sm-6.col-lg-4.col-xl-3
          article.box-minimal
            .box-minimal-icon.fl-bigmug-line-square160
            h4.box-minimal-title Safety & Security
            .box-minimal-text Safety for our employees, customers and the community we work with will always remain our primary focus in all the policies, procedures and programs.
  ="\n"

  // Image Centered
  section.section.section-sm.bg-default.text-left
    .container
      h1 Centered image
      .row.row-40
        .col-lg-10.col-xl-8
          figure
            +jpg('typography-1-770x480', 'img-centered')
            figcaption
              p Reliable Services

          p.big Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.
  ="\n"

  // Image Left
  section.section.section-sm.bg-default.text-left
    .container
      h1 Left Image
      .row.row-30
        .col-md-6.col-lg-5.col-xl-4: +jpg('typography-2-370x230')
        .col-md-6.col-lg-5.col-xl-4: p.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.
  ="\n"

  // Image Right
  section.section.section-sm.section-last.bg-default.text-left
    .container
      h1 Right Image
      .row.row-30.flex-md-row-reverse.justify-content-md-end
        .col-md-6.col-lg-5.col-xl-4: +jpg('typography-2-370x230')
        .col-md-6.col-lg-5.col-xl-4: p.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.
  ="\n"

  // Page Footer
  include ../sections/_footer-classic