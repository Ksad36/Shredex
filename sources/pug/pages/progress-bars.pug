extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_ui-counter

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Progress Bars'

block page  
  // Page Header
  include ../sections/_header-classic

  +breadcrumbs({
    category: activeCategory,
    subtitle: 'Choose Your Style',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })
 
  // Skill Barst
  section.section.section-xxl.bg-white
    .container
      h3 Progress Bars, Skill Bars, Counters
      p.text-width-medium These elements are vital to every websiteâ€™s design, and with them you are able to improve the overall look of your resource and attract more clients.

      .row.row-40.justify-content-center.justify-content-xl-between.flex-lg-row-reverse
        .col-md-10.col-lg-6.col-xl-5.text-md-left
          h4 Welcome to our website
          p.text-gray-600 Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page. It will tell you lots of interesting things about our company, its products and services, highly professional staff and happy customers.

        .col-md-10.col-lg-6
          +progress-bar-linear({
            title: "Ski school",
            valueTo: "75"
          })

          +progress-bar-linear({
            title: "Snowboarding school",
            valueTo: "50"
          })

          +progress-bar-linear({
            title: "Snowmobile tours",
            valueTo: "25"
          })
  ="\n"
  
  include ../sections/_section-counters

  // Countdown
  section.section.section-lg.bg-white
    .container
      h3 Countdown
      .row.row-offset-1.justify-content-center
        .col-md-12.col-lg-9.col-xl-7
          // TimeCircles
          .DateCountdown(data-type='until' data-date='2018-12-31 00:00:00' data-format='wdhms' data-color=config.primary data-bg='rgba(245, 245, 245, 0)' data-width='0.02')
  ="\n"
  
  // Page Footer
  include ../sections/_footer-classic