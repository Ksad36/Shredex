extends  ../_skeleton

//- Includes
include ../components/_post
include ../components/_ui-pagination
include ../components/_box-comment
include ../components/_ui-contact-form

block variables
  - var activeCategory = 'blog'
  - var pageName = 'Blog Post Page'

block page 
  // Page Header
  include ../sections/_header-classic

  +breadcrumbs({
    category: activeCategory,
    subtitle: 'Our news',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })

  // Blog post
  section.section.section-sm.section-first.bg-default
    .container
      .row.row-50.justify-content-center
        .col-lg-11.col-xl-10
          .section-blog-post
            .section-blog-post-header
              h1 10 New Snow Sports to Try This Winter
              .post-bottom-panel
                div
                  .group-xl

                    .post-modern-author
                      span.post-icon.icon.mdi.mdi-account
                      span by
                        =' '
                        a(href='#') Ronald Chen


                    .post-modern-time
                      span.post-icon.icon.mdi.mdi-calendar-clock
                      time(datetime='2018-07-20 12:29') July 20, 2018 at 12:29 pm

                div
                  .group-xl

                    .post-modern-views
                      span.post-icon.icon.mdi.mdi-eye
                      span 193


                    .post-modern-comment
                      span.post-icon.icon.mdi.mdi-comment
                      a(href='#') 3

            .section-blog-post-figure
              +jpg('post-14-970x647')
              span.badge.badge-primary Winter

            .section-blog-post-content
              p.big Curabitur egestas mi eget massa maximus, eget dapibus ex feugiat. Vestibulum a dapibus tellus. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Etiam lorem orci, pellentesque quis leo at, dapibus elementum metus.
