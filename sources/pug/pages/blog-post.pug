  ="\n"

  // Comments
  section.section.section-sm.bg-default.text-md-left
    .container
      .row.justify-content-center
        .col-lg-11.col-xl-9.offset-xl-left-1
          h2 Comments
          +box-comment({
            img: 'team-9-80x80',
            author: 'Catherine Payne',
            text: 'Cum armarium experimentum, omnes indictioes locus magnum, grandis quadraes. Secula potuss, tanquam varius adiurator. Heu, brevis guttus!'
