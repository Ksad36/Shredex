  // Leave a Comment
  section.section.section-sm.section-last.bg-default.text-md-left
    .container
      .row.justify-content-center
        .col-lg-11.col-xl-9.offset-xl-left-1
          h2 Leave a Comment
          +contact-form({ buttonText: 'Submit' })

  ="\n"

  // Page Footer
  include ../sections/_footer-classic