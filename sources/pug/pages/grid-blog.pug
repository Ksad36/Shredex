extends  ../_skeleton

//- Includes
include ../components/_post
include ../components/_ui-pagination

block variables
  - var activeCategory = 'blog'
  - var pageName = 'Grid blog'

block page 
  // Page Header
  include ../sections/_header-classic

  +breadcrumbs({
    category: activeCategory,
    subtitle: 'Our news',
    path: [pageName],
    bgImage: 'bg-breadcrumbs'
  })

  // Grid blog
  section.section.section-xxl.bg-default
    .container
      .row.row-50.justify-content-center.justify-content-xl-between
        .col-md-7.col-lg-8
          .row.row-40
            .col-lg-6
              +post-modern({
                mod: 'post-modern post-height',
                img: 'post-4-370x300',
                title: '10 New Snow Sports to Try This Winter',
                textBlogPage: 'grid',
                time: 'January 20, 2018 at 12:29 pm',
                datetime: '2018-01-20 12:29',
                badge: 'Winter'
              })

            .col-lg-6
              +post-modern({
                mod: 'post-modern post-height',
                img: 'post-5-370x300',
                title: 'Daredevil Winter Sports in Finland',
                textBlogPage: 'grid',
                time: 'January 20, 2018 at 12:29 pm',
                datetime: '2018-01-20 12:29',
                badge: 'Articles'
              })

            .col-lg-6
              +post-modern({
                mod: 'post-modern post-height',
                img: 'post-6-370x300',
                title: '5 Easy Snowboarding Tips',
                textBlogPage: 'grid',
                time: 'January 20, 2018 at 12:29 pm',
                datetime: '2018-01-20 12:29',
                badge: 'Tips & tricks'
              })

            .col-lg-6
              +post-modern({
                mod: 'post-modern post-height',
                img: 'post-11-370x300',
                title: 'Best-Value Family Ski Trips',
                textBlogPage: 'grid',
                time: 'January 20, 2018 at 12:29 pm',
                datetime: '2018-01-20 12:29',
                badge: 'Skiing'
              })

            .col-lg-6
              +post-modern({
                mod: 'post-modern post-height',
                img: 'post-12-370x300',
                title: '10 New Snow Resorts to Visit This Winter',
                textBlogPage: 'grid',
                time: 'January 20, 2018 at 12:29 pm',
                datetime: '2018-01-20 12:29',
                badge: 'Tips & tricks'
              })

            .col-lg-6
              +post-modern({
                mod: 'post-modern post-height',
                img: 'post-13-370x300',
                title: 'Why You Should Book an Airboat Tour',
                textBlogPage: 'grid',
                time: 'January 20, 2018 at 12:29 pm',
                datetime: '2018-01-20 12:29',
                badge: 'Skiing'
              })

          a.button.button-load.button-block.button-white-outline(href='#') Load more posts
          .pagination-wrap
            +pagination-bootstrap(null, 1, 3)

        .col-md-5.col-lg-4.col-xl-3
          include ../sections/_blog-aside
  ="\n"

  // Page Footer
  include ../sections/_footer-classic